<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    tools:context=".ResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="@drawable/comelecdaw" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:textColor="#000000"
            android:text="Hello Gar! You Voted For"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/textViewPresident"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="15dp"
            android:background="#2B448E"
            android:paddingLeft="15dp"
            android:textColor="#FFF"
            android:textColorHint="#FFF"
            android:textSize="18sp" /> <!-- Adjusted text size -->

        <TextView
            android:id="@+id/textViewVicePresident"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="#2B448E"
            android:paddingLeft="15dp"
            android:textColor="#FFF"
            android:textColorHint="#FFF"
            android:textSize="18sp" /> <!-- Adjusted text size -->/>
        <Button
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:backgroundTint="#CF3232"
            android:onClick="goToVoting"
            android:text="Exit"
            android:textColor="#FFF" />
    </LinearLayout>
</LinearLayout>